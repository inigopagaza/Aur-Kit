<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainSelector"
    android:background="@android:color/holo_green_dark" >

    <TextView
        android:id="@+id/floor_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/floor_select_prompt"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/spinnerFloor"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:prompt="@string/floor_select_prompt"
        android:spinnerMode="dropdown"/>
    
    <TextView
        android:id="@+id/class_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/class_select_prompt"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/spinnerClass"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:prompt="@string/class_select_prompt"
        android:spinnerMode="dropdown" />

    <CheckBox
        android:id="@+id/checkboxElev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/elev" />

    <Button
        android:id="@+id/button_go"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/button_go" />

</LinearLayout><!-- From: file:/C:/Users/pagaz_000/StudioProjects/Aur-Kit/aurKit/src/main/res/layout/activity_main_selector.xml -->